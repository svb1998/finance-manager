{
  "compilerOptions": {
   

    "target": "ES6",                                 
    "module": "CommonJS",
    "moduleResolution": "node",                        
    "outDir": "./dist",
    "rootDir": "src",                               
    "esModuleInterop": true,                                    
    "strict": true,                                     
    "skipLibCheck": true,    
    "forceConsistentCasingInFileNames": true,                            
    "resolveJsonModule": true

  },
  "include": ["src"]
}
